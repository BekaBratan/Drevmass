<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingVertical="16dp"
        android:paddingHorizontal="8dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProduct"
            android:layout_width="148dp"
            android:layout_height="88dp"
            app:shapeAppearanceOverlay="@style/style_corner_for_img_16dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/brand_400"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="1">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="112dp"
                android:layout_height="12dp"
                android:layout_marginTop="4dp"
                app:shapeAppearanceOverlay="@style/style_corner_for_img_4dp"
                android:background="@color/brand_400"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="88dp"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"
                app:shapeAppearanceOverlay="@style/style_corner_for_img_4dp"
                android:background="@color/brand_400"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="64dp"
                android:layout_height="12dp"
                android:layout_marginTop="28dp"
                app:shapeAppearanceOverlay="@style/style_corner_for_img_4dp"
                android:background="@color/brand_400"/>

        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ibAddToCart"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:shapeAppearanceOverlay="@style/CustomRoundedImageView18dp"
            android:background="@color/brand_400"/>

    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
