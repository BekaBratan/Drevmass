<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/info_bonus_program_back_gr"
    tools:context=".presentation.profile.bottomSheetDialog.InfoBonusProgramDialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_info_bonus_program_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/toolbar_infoBonusProgram_included"
            layout="@layout/toolbar_info_bonus_program"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fragment_info_bonus_program_toolbar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_bonus_program"
            android:textColor="@color/grey_black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/fragment_info_bonus_program_toolbar"
            android:layout_margin="@dimen/dp_16"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>