<?xml version="1.0" encoding="utf-8"?>
<!-- rounded_progress_bar.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="20dp" /> <!-- Здесь можно установить желаемый угловой радиус -->
            <solid android:color="@color/divider_add" /> <!-- Здесь можно установить цвет фона -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="20dp" /> <!-- Здесь можно установить желаемый угловой радиус -->
                <solid android:color="@color/woody" /> <!-- Здесь можно установить цвет прогресса -->
            </shape>
        </clip>
    </item>
</layer-list>
